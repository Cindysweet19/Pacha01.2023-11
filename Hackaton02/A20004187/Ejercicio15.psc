Algoritmo Ejercicio15
	
	Escribir  "Ingresa el valor de centimetros:";
    Leer centimetros;
	
	pulgadas <- centimetros/2.54;
	Escribir "El valor convertido de centrimetro a pulgadas es: ", pulgadas;
	
    Escribir  "Ingresa el valor de libras:";
